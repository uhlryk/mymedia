{
    "name": "mymedia",
    "version": "0.0.0",
    "main": "dist/desktop/main.js",
    "scripts": {
        "ng": "ng",
        "test": "ng test",
        "lint": "ng lint",
        "e2e": "ng e2e",
        "build-electron": "tsc --lib ES2018,DOM --target ES5 src-backend/main.ts --outDir dist/desktop",
        "build": "ng build --base-href ./ && tsc --lib ES2018,DOM --target ES5 src-backend/main.ts --outDir dist/desktop",
        "start": "electron .",
        "start-hot": "concurrently \"IS_HOT=1 electron .\" \"ng serve --live-reload -o\"",
        "package": "npm run build && electron-packager . mymedia --overwrite --asar --icon=dist/assets/icon.ico --ignore=^e2e$ --ignore=^src$ --ignore=^src-backend$ --ignore=^.editorconfig$ --ignore=^.gitignore$ --ignore=^angular.json$ --ignore=^browserslist$ --ignore=^karma.conf.js$ --ignore=^package-lock.json$ --ignore=^README.md$ --ignore=^tslint --ignore=^tsconfig"
    },
    "private": true,
    "dependencies": {
        "@angular/animations": "~8.2.4",
        "@angular/common": "~8.2.4",
        "@angular/compiler": "~8.2.4",
        "@angular/core": "~8.2.4",
        "@angular/forms": "~8.2.4",
        "@angular/platform-browser": "~8.2.4",
        "@angular/platform-browser-dynamic": "~8.2.4",
        "@angular/router": "~8.2.4",
        "bootstrap": "^4.3.1",
        "child_process": "^1.0.2",
        "ffmpeg-static-electron": "^2.0.1",
        "fs": "0.0.1-security",
        "fs-extra": "^8.1.0",
        "graceful-fs": "^4.2.2",
        "ngx-bootstrap": "^5.1.2",
        "path": "^0.12.7",
        "rxjs": "~6.4.0",
        "tslib": "^1.10.0",
        "uuidv4": "^5.0.1",
        "zone.js": "~0.9.1"
    },
    "devDependencies": {
        "@angular-devkit/build-angular": "^0.803.5",
        "@angular-guru/electron-builder": "^8.0.0",
        "@angular/cli": "~8.3.2",
        "@angular/compiler-cli": "~8.2.4",
        "@angular/language-service": "~8.2.4",
        "@types/fs-extra": "^8.0.0",
        "@types/jasmine": "~3.3.8",
        "@types/jasminewd2": "~2.0.3",
        "@types/node": "~8.9.4",
        "codelyzer": "^5.0.0",
        "concurrently": "^4.1.2",
        "electron": "^6.0.7",
        "electron-packager": "^14.0.5",
        "install": "^0.13.0",
        "jasmine-core": "~3.4.0",
        "jasmine-spec-reporter": "~4.2.1",
        "karma": "~4.1.0",
        "karma-chrome-launcher": "~2.2.0",
        "karma-coverage-istanbul-reporter": "~2.0.1",
        "karma-jasmine": "~2.0.1",
        "karma-jasmine-html-reporter": "^1.4.0",
        "npm": "^6.11.3",
        "prettier": "^1.18.2",
        "protractor": "~5.4.0",
        "ts-node": "~7.0.0",
        "tslint": "~5.15.0",
        "typescript": "^3.5.3"
    }
}
